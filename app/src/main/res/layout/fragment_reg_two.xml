<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_green"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragments.RegTwoFragment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="224dp"
        android:layout_height="124dp"
        android:src="@drawable/logo" />

    <EditText
        android:layout_width="232dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:hint ="Имя" />

    <EditText
        android:layout_width="232dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:hint ="Фамилия" />



    <EditText
        android:layout_width="232dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:hint ="Место рождения" />

    <EditText
        android:layout_width="232dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:hint ="Дата рождения" />

    <EditText
        android:layout_width="232dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:hint="Серия и номер паспорта" />

    <EditText
        android:layout_width="232dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:hint="Дата выдачи" />

    <EditText
        android:layout_width="232dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:hint="Дата окончания" />

    <EditText
        android:layout_width="232dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:hint="Номер счета" />

    <EditText
        android:layout_width="232dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:hint="Адрес прописки" />

    <EditText
        android:layout_width="232dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:hint="Адрес проживания"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="92dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_yellow"
        android:text="Регистрация" />

</LinearLayout>